  "version": "0.2.0",
  "configurations": [


    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach Karma Chrome",
      "address": "127.0.0.1",
      "port": 9876,
      "pathMapping": {
        "/": "${workspaceRoot}/admin/",
        "/base/": "${workspaceRoot}/admin/"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "program": "${workspaceFolder}/server/server.js"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Admin Client",
      "url": "http://localhost:4200/admin/page-builder/5cdb5cc2f744441df910f43f",
      "webRoot": "${workspaceFolder}/admin"
    }
  ]
