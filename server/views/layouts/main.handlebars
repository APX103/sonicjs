<!doctype html>
<html lang="en" class="{{page.data.pageCssClass}}">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel="icon" href="/img/favicon.ico">

  <title>{{title}}</title>

  <!-- Web Fonts -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family={{page.data.siteSettings.fontHeaders}}">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family={{page.data.siteSettings.fontDefault}}">
  <style>
    body,
    p {
      font-family: '{{page.data.siteSettings.fontDefault}}',
      serif !important;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      font-family: '{{page.data.siteSettings.fontHeaders}}',
      serif;
    }
  </style>

  <!-- Bootstrap core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  {{#unless page.data.showPageBuilder}}
  <link href="/api/containers/css/download/template.css" rel="stylesheet">
  {{/unless}}
  
  {{#if page.data.showPageBuilder}}
  <link href="/css/page-builder.css" rel="stylesheet">
  {{/if}}

  <link href="/css/font-awesome.css" rel="stylesheet">
  <link href="/jsoneditor.min.css" rel="stylesheet">
  {{!-- <link href="/css/generated.css" rel="stylesheet"> --}}

  {{!-- <link href="/formio.full.min.css" rel="stylesheet"> --}}

  <base href="/">

</head>

<body>
  <input type="hidden" name="page-id" id="page-id" value="{{page.id}}">
  {{> menu }}

  <main role="main">

    {{#if page.data.showPageBuilder}}
    {{> page-builder }}
    {{/if}}

    {{{body}}}

  </main><!-- /.container -->

  <footer class="blog-footer">
    <div class="container">
      <div class="row">
        <div class="col">
          <p>Powered by <a href="https://sonicjs.com">SonicJs Node CMS</a></p>
        </div>
      </div>
    </div>
  </footer>

  <script src="jquery.min.js"></script>
  <script src="/js/popper.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/page-builder.js"></script>
  <script src="/js/tinymce.min.js"></script>
  <script src="/js/jquery.tinymce.min.js"></script>
  <script src="/jsoneditor.min.js"></script>
  <script src="/formio.full.min.js"></script>


</body>

</html>