    <div class="card-header">
      <i class="fa fa-align-justify"></i> Menus
    </div>
    <div class="card-body menu-list">
      <table class="table table-responsive-sm table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Parent</th>
            <th>Slug</th>
            <th>Created</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          {{#each menuLinks}}
          <tr>
            <td>{{ this.title}}</td>
            <td>[root]</td>
            <td>{{ this.slug}}</td>
            <td>{{ this.title}}</td>
            <td>
              <span class="badge badge-success">Active</span>
              <button v-on:click="deletePage('{{{ this._id }}}')" class="btn btn-sm btn-danger">Delete</button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
