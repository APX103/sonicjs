<script type="text/javascript">
  var menuList = new Vue({
    el: '.menu-list',
    data: {
      name: '{{{ page.title }}}',
      debug: true,
      domain: '',
      ajaxRequest: false,
      postResults: []
    },
    // define methods under the `methods` object
    methods: {
      deletePage: function (id) {
        axios.post('/admin/deletemenu', {
            id: id
          })
          .then(function (page) {
            console.log('refreshing page');
            location.reload();
          })
          .catch(function (error) {
            console.log(error);
          });

      }
    }
  })
</script>